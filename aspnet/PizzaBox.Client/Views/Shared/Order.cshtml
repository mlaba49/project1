@model PizzaBox.Client.Models.OrderViewModel

<h1>Order Pizza</h1>

<form asp-action="post" asp-controller="order" asp-antiforgery="true" method="POST">
  <label for="user" asp-for="@Model.User">User:</label>
    <select name="user" id="user">
      @foreach (var user in Model.Users)
      {
          <option value="@user">@user</option>
      }
    </select>
  <br>
  <label for="store" asp-for="@Model.Store">Store:</label>
    <select name="store" id="store">
      @foreach (var store in Model.Stores)
      {
          <option value="@store">@store</option>
      }
    </select>
  <br>
  Pizza:<br>
  Base Price: $9.99<br>
  Size: <input type="radio" asp-for="@Model.Size" value="NORMAL" id="SNORMAL" required>
    <label for="SNORMAL">Normal</label>
     <input type="radio" asp-for="@Model.Size" value="LARGE" id="SLARGE">
    <label for="SLARGE">Large (+$5.00)</label>
     <input type="radio" asp-for="@Model.Size" value="SMALL" id="SSMALL">
    <label for="SSMALL">Small (-$5.00)</label>
  <br>
  Crust: <input type="radio" asp-for="@Model.Crust" value="NORMAL" id="CNORMAL" required>
    <label for="CNORMAL">Normal</label>
     <input type="radio" asp-for="@Model.Crust" value="CHEESE" id="CCHEESE">
    <label for="CCHEESE">Cheese (+$5.00)</label>
  <br>
  +$5.00 per topping<br>
  <label for="topping1" asp-for="@Model.Topping1">Topping 1:</label>
    <select name="topping1" id="topping1">
      <option value="EXTRA_CHEESE">Extra Cheese</option>
      <option value="PEPPERONI">Pepperoni</option>
      <option value="BACON">Bacon</option>
      <option value="HAM">Ham</option>
      <option value="ONION">Onion</option>
      <option value="PINEAPPLE">Pineapple</option>
    </select>
  <label for="topping2" asp-for="@Model.Topping2">Topping 2:</label>
    <select name="topping2" id="topping2">
      <option value="EXTRA_CHEESE">Extra Cheese</option>
      <option value="PEPPERONI">Pepperoni</option>
      <option value="BACON">Bacon</option>
      <option value="HAM">Ham</option>
      <option value="ONION">Onion</option>
      <option value="PINEAPPLE">Pineapple</option>
    </select>
  <label for="topping3" asp-for="@Model.Topping3">Topping 3:</label>
    <select name="topping3" id="topping3">
      <option value="NONE">None</option>
      <option value="EXTRA_CHEESE">Extra Cheese</option>
      <option value="PEPPERONI">Pepperoni</option>
      <option value="BACON">Bacon</option>
      <option value="HAM">Ham</option>
      <option value="ONION">Onion</option>
      <option value="PINEAPPLE">Pineapple</option>
    </select>
  <label for="topping4" asp-for="@Model.Topping4">Topping 4:</label>
    <select name="topping4" id="topping4">
      <option value="NONE">None</option>
      <option value="EXTRA_CHEESE">Extra Cheese</option>
      <option value="PEPPERONI">Pepperoni</option>
      <option value="BACON">Bacon</option>
      <option value="HAM">Ham</option>
      <option value="ONION">Onion</option>
      <option value="PINEAPPLE">Pineapple</option>
    </select>
  <label for="topping5" asp-for="@Model.Topping5">Topping 5:</label>
    <select name="topping5" id="topping5">
      <option value="NONE">None</option>
      <option value="EXTRA_CHEESE">Extra Cheese</option>
      <option value="PEPPERONI">Pepperoni</option>
      <option value="BACON">Bacon</option>
      <option value="HAM">Ham</option>
      <option value="ONION">Onion</option>
      <option value="PINEAPPLE">Pineapple</option>
    </select><br>
  <label for="amount" asp-for="@Model.Amount">Amount of Pizzas:</label>
    <select name="amount" id="amount">
      <option value="1">1</option>
      <option value="2">2</option>
      <option value="3">3</option>
      <option value="4">4</option>
      <option value="5">5</option>
    </select>
  <br>
  <button type="submit">Place Order</button>
</form>